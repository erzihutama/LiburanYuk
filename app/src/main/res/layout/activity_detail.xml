<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/img_item_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="145dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">
                    <View
                        android:id="@+id/line2"
                        android:layout_width="30dp"
                        android:layout_height="6dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="2dp"
                        android:background="@color/orange" />
                    <TextView
                        android:id="@+id/tv_item_name"

                        android:textColor="@color/putih"

                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="Name" />

                    <TextView
                        android:id="@+id/tv_item_remarks"
                        android:textColor="@color/putih"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="Remarks" />


                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/line"
            android:layout_width="30dp"
            android:layout_height="6dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="2dp"
            android:background="@color/orange2" />

        <TextView
            android:id="@+id/art"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_marginStart="13dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:text="@string/Deskripsi"
            android:textColor="@color/intro_title_color"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView

            android:id="@+id/content_detail"
            style="@style/TextContent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:lineSpacingMultiplier="1"
            android:text="Deskripsi"
            android:textColor="@color/cardview_dark_background" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    style="@style/Textlain.field"

                    android:text="jam" />

                <TextView
                    android:id="@+id/content_lahir"
                    style="@style/Textlain.value"
                    android:text="Conten Lahir" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    style="@style/Textlain.field"
                    android:text="penilaian" />

                <TextView
                    android:id="@+id/content_wafat"
                    style="@style/Textlain.value"
                    android:text="Conten Wafat" />

            </TableRow>

        </TableLayout>
    </LinearLayout>



</FrameLayout>